<Window x:Class="DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoApp" xmlns:filetreemap="clr-namespace:FileTreeMap;assembly=FileTreeMap"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="G">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBox Margin="4" x:Name="PathTextBox" />

        <filetreemap:CustomControl1 Grid.Row="1" x:Name="CC" DirectoryPath="{Binding Text, ElementName=PathTextBox, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</Window>
